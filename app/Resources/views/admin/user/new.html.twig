{% extends 'admin/layout.html.twig' %}

{% block body_id 'admin_user_new' %}

{% block com_title %}Create User{% endblock %}

{% block com_actions %}
    <ul class="nav navbar-nav navbar-right">
        <li><a href="{{ path('admin_user_index') }}"><i class="fa fa-chevron-left"></i> Back to User List</a></li>
    </ul>
{% endblock %}

{% block body %}

    {{ form_start(form, { attr: attr|default({}) }) }}
    <div class="row">
        <div id="main" class="col-sm-9">
            {{ include('default/_flash_messages.html.twig') }}
            {{ form_row(form.first_name) }}
            {{ form_row(form.last_name) }}
            {{ form_row(form.username) }}
            {{ form_row(form.email) }}
            {{ form_row(form.plainPassword) }}
            {{ form_row(form.roles) }}
        </div>

        <div id="sidebar" class="col-sm-3">
            {{ form_row(form.saveAndClose) }}
            {{ form_row(form.saveAndCreateNew) }}
            {{ form_row(form.enabled) }}
        </div>
    </div>
    {{ form_end(form) }}


{% endblock %}

{% block bot_right %}
{% endblock %}
