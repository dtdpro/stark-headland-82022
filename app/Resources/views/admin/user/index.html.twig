{% extends 'admin/layout.html.twig' %}

{% block body_id 'admin_user_index' %}

{% block com_title %}Users{% endblock %}

{% block com_actions %}
    <ul class="nav navbar-nav navbar-right">
        <li><a href="{{ path('admin_user_new') }}"><i class="fa fa-plus"></i> Create User</a></li>
    </ul>
{% endblock %}

{% block main %}
    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>ID</th>
                <th><i class="fa fa-user"></i> Username</th>
                <th><i class="fa fa-user"></i> Name</th>
                <th><i class="fa fa-envelope-o"></i> Email</th>
                <th class="text-center"><i class="fa fa-check"></i> Enabled</th>
                <th><i class="fa fa-cogs"></i> Roles</th>
                <th><i class="fa fa-cogs"></i> {{ 'label.actions'|trans }}</th>
            </tr>
        </thead>
        <tbody>
        {% for u in users %}
            <tr>
                <td>{{ u.id }}</td>
                <td>{{ u.username }}</td>
                <td>{{ u.firstName }} {{ u.lastName }}</td>
                <td>{{ u.email }}</td>
                <td class="text-center">{% if u.enabled %}<i class="fa fa-check"></i>{% else %}<i class="fa fa-close"></i>{% endif %}</td>
                <td>{% for r in u.roles %}{{ r|trans }}{% if not loop.last %}, {% endif %}{% endfor %}</td>
                <td>
                    <div class="btn-group" role="group" aria-label="actions">
                        <a href="{{ path('admin_user_show', { id: u.id }) }}" class="btn btn-sm btn-default">
                            <i class="fa fa-eye"></i> {{ 'action.show'|trans }}
                        </a>

                        <a href="{{ path('admin_user_edit', { id: u.id }) }}" class="btn btn-sm btn-primary">
                            <i class="fa fa-edit"></i> {{ 'action.edit'|trans }}
                        </a>
                    </div>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4" align="center">No Users Found</td>
           </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}

{% block sidebar %}
    <div class="panel panel-primary">
        <div class="panel-heading"><i class="fa fa-filter"></i> Filters</div>
        <div class="panel-body">
            Pending...
        </div>
    </div>
    {{ parent() }}
{% endblock %}

{% block bot_right %}
    {{ show_source_code(_self) }}
{% endblock %}
