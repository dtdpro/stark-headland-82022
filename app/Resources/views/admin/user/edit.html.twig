{% extends 'admin/layout.html.twig' %}

{% block body_id 'admin_user_edit' %}

{% block com_title %}{{ 'title.edit_user'|trans({'%id%': user.id}) }}{% endblock %}

{% block com_actions %}
    <ul class="nav navbar-nav navbar-right">
        <li><a href="{{ path('admin_user_index') }}"><i class="fa fa-chevron-left"></i> Back to User List</a></li>
    </ul>
{% endblock %}

{% block body %}

    {{ form_start(edit_form, { attr: attr|default({}) }) }}
    <div class="row">
        <div id="main" class="col-sm-9">
            {{ include('default/_flash_messages.html.twig') }}
            {{ form_row(edit_form.first_name) }}
            {{ form_row(edit_form.last_name) }}
            {{ form_row(edit_form.username) }}
            {{ form_row(edit_form.email) }}
            {{ form_row(edit_form.plainPassword) }}
            {{ form_row(edit_form.roles) }}
        </div>

        <div id="sidebar" class="col-sm-3">
            {{ form_row(edit_form.saveAndClose) }}
            {{ form_row(edit_form.save) }}
            {{ form_row(edit_form.enabled) }}
        </div>
    </div>
    {{ form_end(edit_form) }}

{% endblock %}

{% block bot_right %}
    {{ show_source_code(_self) }}
{% endblock %}
