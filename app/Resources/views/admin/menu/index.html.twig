{% extends 'admin/layout.html.twig' %}

{% block body_id 'admin_menu_index' %}

{% block com_title %}Menus{% endblock %}

{% block com_actions %}
    <ul class="nav navbar-nav navbar-right">
        <li><a href="{{ path('admin_menu_new') }}"><i class="fa fa-plus"></i> Create Menu</a></li>
    </ul>
{% endblock %}

{% block main %}
    <table class="table table-striped">
        <thead>
            <tr>
                <th>ID</th>
                <th><i class="fa fa-user"></i> Menu</th>
                <th class="text-center"><i class="fa fa-cogs"></i> {{ 'label.actions'|trans }}</th>
            </tr>
        </thead>
        <tbody>
        {% for m in menus %}
            <tr>
                <td>{{ m.id }}</td>
                <td><a href="{{ path('admin_menu_edit',{'id':m.id}) }}">{{ m.name }}</a></td>
                <td class="text-center">
                    <div class="btn-group" role="group" aria-label="actions">
                        <a href="{{ path('admin_menu_edit',{'id':m.id}) }}" data-toggle="tooltip" title="{{ 'action.edit'|trans }}">
                            <i class="fa fa-edit"></i>
                        </a>
                    </div>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3" align="center">No Menus Found</td>
           </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}

{% block sidebar %}
    <div class="panel panel-primary">
        <div class="panel-heading"><i class="fa fa-filter"></i> Filters</div>
        <div class="panel-body">
            Pending...
        </div>
    </div>
    {{ parent() }}
{% endblock %}

{% block bot_right %}
{% endblock %}
