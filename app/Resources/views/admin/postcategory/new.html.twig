{% extends 'admin/layout.html.twig' %}

{% block body_id 'admin_category_new' %}

{% block com_title %}Category Creation{% endblock %}

{% block com_actions %}
    <ul class="nav navbar-nav navbar-right">
        <li><a href="{{ path('admin_category_index') }}"><i class="fa fa-chevron-left"></i> Back to the category list</a></li>
    </ul>
{% endblock %}

{% block main %}

    {{ form_start(form) }}
        {{ form_row(form.name) }}
        {{ form_row(form.parent) }}
        {{ form_row(form.createdAt) }}

        <input type="submit" value="Create Category" class="btn btn-primary" />

        {{ form_widget(form.saveAndCreateNew, { label: 'label.save_and_create_new', attr: { class: 'btn btn-primary' } }) }}


    {{ form_end(form) }}
{% endblock %}

{% block sidebar %}
    {{ parent() }}
{% endblock %}

{% block bot_right %}
    {{ show_source_code(_self) }}
{% endblock %}
