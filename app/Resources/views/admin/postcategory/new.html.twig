{% extends 'admin/layout.html.twig' %}

{% block body_id 'admin_category_new' %}

{% block com_title %}Category Creation{% endblock %}

{% block com_actions %}
    <ul class="nav navbar-nav navbar-right">
        <li><a href="{{ path('admin_category_index', { 'catroot':catroot}) }}"><i class="fa fa-chevron-left"></i> Back to the category list</a></li>
    </ul>
{% endblock %}

{% block body %}
    {{ form_start(form, { attr: attr|default({}) }) }}
    <div class="row">
        <div id="main" class="col-sm-9">
            {{ include('default/_flash_messages.html.twig') }}
            {{ form_row(form.name) }}
            {{ form_row(form.parent) }}
            {{ form_row(form.createdAt) }}
        </div>

        <div id="sidebar" class="col-sm-3">
            {{ form_row(form.saveAndClose) }}
            {{ form_row(form.saveAndCreateNew) }}
        </div>
    </div>
    {{ form_end(form) }}
{% endblock %}

{% block bot_right %}
    {{ show_source_code(_self) }}
{% endblock %}
