{% extends 'admin/layout.html.twig' %}

{% block body_id 'admin_category_edit' %}

{% block com_title %}Edit category #{{ cat.id }}{% endblock %}

{% block com_actions %}
    <ul class="nav navbar-nav navbar-right">
        <li><a href="{{ path('admin_category_index',{'catroot':catroot}) }}"><i class="fa fa-chevron-left"></i> Back to category list</a></li>
    </ul>
{% endblock %}

{% block body %}
    {{ form_start(edit_form, { attr: attr|default({}) }) }}
    <div class="row">
        <div id="main" class="col-sm-9">
            {{ include('default/_flash_messages.html.twig') }}
            {{ form_row(edit_form.name) }}
            {{ form_row(edit_form.parent) }}
            {{ form_row(edit_form.createdAt) }}
        </div>

        <div id="sidebar" class="col-sm-3">
            {{ form_row(edit_form.saveAndClose) }}
            {{ form_row(edit_form.save) }}
        </div>
    </div>
    {{ form_end(edit_form) }}
{% endblock %}

{% block bot_right %}
    {{ show_source_code(_self) }}
{% endblock %}
